<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= destination.location %></h2>
      <img class="img-fluid" src="<%= destination.image%>" />
      <div class="row justify-content-between">
         <form
          class="col-1"
          action="/destination/favoriteDestination/<%= destination.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-star" type="submit"></button>
        </form> 
         <h3 class="col-3"> <%= destination.favorite %></h3>
        <%if(destination.user == user.id){ %>
        <form
          action="/destination/deleteDestination/<%= destination.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        > 
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%> 
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= destination.localLanguage %></p>
    </div>
    <div class="col-3 mt-5">
      <p><%= destination.localCurrency %></p>
    </div>
    <div class="col-3 mt-5">
      <p><%= destination.reason %></p>
    </div>
    

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
